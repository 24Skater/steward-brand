{
  "name": "@steward/email-templates",
  "version": "0.1.0",
  "description": "HTML email templates for the Steward ecosystem",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/steward-org/steward-brand.git",
    "directory": "packages/email-templates"
  },
  "type": "module",
  "main": "./dist/index.js",
